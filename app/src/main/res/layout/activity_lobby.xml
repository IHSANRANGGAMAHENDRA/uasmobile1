<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Header Logo -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="146dp"
        android:layout_gravity="center"
        android:contentDescription="Logo Puma"
        android:padding="16dp"
        android:src="@drawable/lpuma" />

    <!-- New Collection Title -->

    <!-- Grid Layout for Products -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:text="NEW COLLECTION"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:padding="16dp">

        <!-- Item 1 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_columnWeight="1"
            android:padding="8dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/velocitynitro2"
                android:contentDescription="Puma Velocity Nitro 2"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Puma Velocity Nitro 2"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingTop="8dp" />
        </LinearLayout>

        <!-- Item 2 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_columnWeight="1"
            android:padding="8dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/rebround"
                android:contentDescription="Puma Rebound Lay Up"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Puma Rebound Lay Up"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingTop="8dp" />
        </LinearLayout>

        <!-- Item 3 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_columnWeight="1"
            android:padding="8dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/genetik"
                android:contentDescription="Puma Genetic Basketball"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Puma Genetic Basketball"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingTop="8dp" />
        </LinearLayout>

        <!-- Item 4 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_columnWeight="1"
            android:padding="8dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/mostro"
                android:contentDescription="Puma Mostro Ecstasy"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Puma Mostro Ecstasy"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingTop="8dp" />
        </LinearLayout>

    </GridLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp">

        <!-- Home Icon -->
        <ImageView
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:contentDescription="Home Icon"
            android:padding="16dp"
            android:src="@drawable/home" />

        <!-- Cart Icon -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cart"
            android:contentDescription="Cart Icon"
            android:padding="16dp" />
    </LinearLayout>
</LinearLayout>