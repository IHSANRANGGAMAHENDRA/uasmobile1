<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Top Bar with Back Button -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:src="@drawable/kiripanah"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <!-- Product Image -->
    <ImageView
        android:id="@+id/productImage3"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/genetik"
        android:scaleType="fitCenter"
        android:padding="16dp"/>

    <!-- Product Details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Product Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Puma Genetics Basketball"
            android:textSize="28sp"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <!-- Price -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp.1.200.00"
            android:textSize="24sp"
            android:textColor="#000000"
            android:layout_marginTop="8dp"/>

        <!-- Size Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIZE"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginTop="24dp"/>

        <!-- Size Grid -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/size39"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="39"
                android:textSize="16sp"
                android:background="#666666"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/size40"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="40"
                android:textSize="16sp"
                android:background="#666666"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/size41"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="41"
                android:textSize="16sp"
                android:background="#666666"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/size42"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="42"
                android:textSize="16sp"
                android:background="#666666"
                android:textColor="#FFFFFF"/>
        </GridLayout>

        <!-- Add to Cart Button -->
        <Button
            android:id="@+id/addToCartButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Add to cart"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:background="#666666"
            android:layout_marginTop="32dp"/>
    </LinearLayout>
</LinearLayout>