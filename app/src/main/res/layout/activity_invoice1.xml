<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Tombol Kembali -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/kiripanah"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_marginBottom="16dp"
        android:tint="#000000"
        android:contentDescription="Back" />

    <!-- Judul -->
    <TextView
        android:id="@+id/invoiceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="INVOICE"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="16dp" />

    <!-- Gambar Produk -->
    <ImageView
        android:id="@+id/productImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/velocitynitro2"
        android:scaleType="centerCrop"
        android:layout_marginBottom="16dp" />

    <!-- Nama Produk -->
    <TextView
        android:id="@+id/productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Puma Velocity"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="16dp" />

    <!-- Detail Produk -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="HARGA :"
                android:textSize="16sp"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RP.800.000"
                android:textSize="16sp"
                android:textColor="#000000" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="BIAYA PPN% :"
                android:textSize="16sp"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/tax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RP.100.000"
                android:textSize="16sp"
                android:textColor="#000000" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Biaya Pengiriman :"
                android:textSize="16sp"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/shippingCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gratis Ongkir"
                android:textSize="16sp"
                android:textColor="#000000" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total :"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/totalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RP.900.000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Size :"
                android:textSize="16sp"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="39"
                android:textSize="16sp"
                android:textColor="#000000" />
        </TableRow>
    </TableLayout>
</LinearLayout>