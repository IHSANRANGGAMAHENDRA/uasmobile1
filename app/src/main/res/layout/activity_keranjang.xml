<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Tombol Kembali -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/kiripanah"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_marginBottom="8dp"
        android:contentDescription="Back" />

    <!-- Judul -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="SHOPPING TROLLEY"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Kontainer Produk -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_gravity="center">

        <!-- Item Produk 1 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:background="#808080"
            android:padding="8dp">

            <ImageView
                android:id="@+id/productImage1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/velocitynitro2"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/productName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Velocity Nitro 2"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/productPrice1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp.800.000.00"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginTop="4dp" />

            <Button
                android:id="@+id/buybutton1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BUY"
                android:textStyle="bold"
                android:background="#FFFFFF"
                android:textColor="#000000"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Item Produk 2 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:background="#808080"
            android:padding="8dp">

            <ImageView
                android:id="@+id/productImage2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/rebround"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/rebround"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rebound Lay Up"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp.1.900.000"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginTop="4dp" />

            <Button
                android:id="@+id/buybutton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BUY"
                android:textStyle="bold"
                android:background="#FFFFFF"
                android:textColor="#000000"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Item Produk 3 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:background="#808080"
            android:padding="8dp">

            <ImageView
                android:id="@+id/productImage"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/genetik"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Genetic Basketball"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp.1.200.000"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginTop="4dp" />

            <Button
                android:id="@+id/buybutton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BUY"
                android:textStyle="bold"
                android:background="#FFFFFF"
                android:textColor="#000000"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Item Produk 4 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:background="#808080"
            android:padding="8dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/mostro"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Puma Mostro"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp.1.400.000"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginTop="4dp" />

            <Button
                android:id="@+id/buybutton4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BUY"
                android:textStyle="bold"
                android:background="#FFFFFF"
                android:textColor="#000000"
                android:layout_marginTop="8dp" />
        </LinearLayout>

    </GridLayout>
</LinearLayout>